<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_main"
    android:padding="6dp">
    <LinearLayout
        android:id="@+id/lL_title_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Zooma"
            android:fontFamily="sans-serif"
            android:textSize="30dp"
            android:textFontWeight="1000"
            android:textColor="@color/brown_medium"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play fun with animals!"
            android:fontFamily="sans-serif"
            android:textColor="@color/brown_light"
            android:textSize="20dp"
            android:textFontWeight="500"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lL_main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lL_title_main"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="310dp"
            android:layout_height="150dp"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_btn_sound"
            android:onClick="goToSound"/>

        <ImageButton
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_btn_story"
            android:onClick="goToStory"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif"
        android:textColor="@color/brown_dark"
        android:textFontWeight="1000"
        android:text="Zooma Ver 1.0"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>