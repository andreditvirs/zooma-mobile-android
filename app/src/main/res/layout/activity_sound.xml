<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_main"
    android:padding="6dp">
    <LinearLayout
        android:id="@+id/lL_title_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Zooma"
            android:fontFamily="sans-serif"
            android:textSize="30dp"
            android:textFontWeight="1000"
            android:textColor="@color/brown_medium"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suara Satwa!"
            android:fontFamily="sans-serif"
            android:textColor="@color/brown_light"
            android:textSize="20dp"
            android:textFontWeight="500"
            android:textAlignment="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lL_title_main"
        android:layout_above="@id/txtV_version">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:layout_weight="2">
                <ImageButton
                    android:id="@+id/btn_elephant"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:src="@drawable/elephant"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:padding="6dp"
                    android:layout_marginHorizontal="4dp"/>
                <ImageButton
                    android:id="@+id/btn_horse"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/horse"
                    android:background="@color/white"
                    android:padding="6dp"
                    android:layout_marginHorizontal="4dp"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:layout_weight="2">
                <ImageButton
                    android:id="@+id/btn_cat"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:src="@drawable/cat"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:padding="6dp"
                    android:layout_marginHorizontal="4dp"/>
                <ImageButton
                    android:id="@+id/btn_rooster"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:padding="6dp"
                    android:src="@drawable/rooster"
                    android:background="@color/white"
                    android:layout_marginHorizontal="4dp"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:layout_weight="2">
                <ImageButton
                    android:id="@+id/btn_tiger"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:src="@drawable/tiger"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:padding="6dp"
                    android:layout_marginHorizontal="4dp"/>
                <ImageButton
                    android:id="@+id/btn_cow"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:padding="6dp"
                    android:src="@drawable/cow"
                    android:background="@color/white"
                    android:layout_marginHorizontal="4dp"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/txtV_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif"
        android:textColor="@color/brown_dark"
        android:textFontWeight="1000"
        android:text="Zooma Ver 1.0"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>